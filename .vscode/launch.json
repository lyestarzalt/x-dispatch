{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Electron: Main",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron-forge",
      "args": ["start"],
      "outputCapture": "std",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Electron: Renderer",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/src",
      "timeout": 30000,
      "sourceMaps": true
    },
    {
      "name": "Electron: All",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron-forge",
      "args": ["start", "--inspect=5858"],
      "outputCapture": "std",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "serverReadyAction": {
        "pattern": "Webpack.*compiled",
        "action": "debugWithChrome",
        "webRoot": "${workspaceFolder}/src"
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug Electron (Main + Renderer)",
      "configurations": ["Electron: Main", "Electron: Renderer"]
    }
  ]
}
